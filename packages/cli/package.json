{
  "name": "@controlvector/cv-git",
  "version": "0.3.5",
  "description": "AI-Native Paired-Programming + Knowledge-Graph Version Control Layer",
  "type": "module",
  "bin": {
    "cv": "./dist/bundle.cjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/controlvector/cv-git.git"
  },
  "keywords": [
    "git",
    "ai",
    "knowledge-graph",
    "developer-tools",
    "cli",
    "version-control"
  ],
  "author": "Control Vector",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/controlvector/cv-git/issues"
  },
  "homepage": "https://github.com/controlvector/cv-git#readme",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc && pnpm run bundle",
    "bundle": "node -e \"const fs=require('fs');const c=fs.readFileSync('dist/index.js','utf8');fs.writeFileSync('dist/index.js',c.replace(/^#!.*\\n/,''))\" && esbuild dist/index.js --bundle --platform=node --format=cjs --outfile=dist/bundle.cjs --external:keytar --external:tree-sitter --external:tree-sitter-* --banner:js='#!/usr/bin/env node'",
    "dev": "tsc --watch",
    "clean": "rm -rf dist *.tsbuildinfo",
    "start": "node dist/bundle.js",
    "test": "vitest"
  },
  "dependencies": {
    "@cv-git/core": "workspace:*",
    "@cv-git/credentials": "workspace:*",
    "@cv-git/platform": "workspace:*",
    "@cv-git/prd-client": "workspace:*",
    "@cv-git/shared": "workspace:*",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.3",
    "commander": "^11.1.0",
    "inquirer": "^9.2.12",
    "marked": "^11.1.0",
    "marked-terminal": "^7.0.0",
    "ora": "^8.2.0",
    "redis": "^4.7.1",
    "simple-git": "^3.22.0"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.19.25",
    "esbuild": "^0.27.0",
    "typescript": "^5.3.3"
  }
}
